<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    style="@style/Match">

    <android.support.design.widget.AppBarLayout
        android:id="@id/movie_detail_appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@id/movie_detail_collapsing_toolbar"
            android:fitsSystemWindows="true"
            android:clickable="true"
            android:foreground="?photoItemForeground"
            app:contentScrim="?attr/colorPrimaryDark"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@id/movie_detail_toolbar"
            style="@style/Match">

            <com.example.android.popularmovies.ui.widgets.ImageViewKeepRatio
                android:id="@id/movie_detail_image_backdrop"
                android:contentDescription="@string/movie_detail_image_backdrop"
                app:layout_collapseMode="parallax"
                app:width_height_ratio="1.5"
                style="@style/ImageMovieDetailBackdrop"
                />

            <ImageView
                android:id="@id/movie_detail_image_backdrop_play"
                android:contentDescription="@string/movie_detail_image_backdrop_play"
                app:layout_collapseMode="parallax"
                style="@style/ImageMovieDetailBackdropPlay"
                />

            <android.support.v7.widget.Toolbar
                android:id="@id/movie_detail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:collapseContentDescription="test"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                style="@style/MovieDetailToolbar"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/cardview_dark_background"
        style="@style/Match">

        <LinearLayout
            style="@style/Fill.Width"
            android:layout_margin="@dimen/spacing_large">


            <RelativeLayout
                android:layout_marginBottom="@dimen/spacing_large"
                style="@style/Fill.Width">

                <com.example.android.popularmovies.ui.widgets.ImageViewKeepRatio
                    android:id="@id/movie_detail_image_poster"
                    android:contentDescription="@string/movie_detail_image_poster"
                    style="@style/ImageMovieDetailPoster"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/movie_detail_image_poster"
                    android:layout_toEndOf="@id/movie_detail_image_poster"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginStart="@dimen/spacing_large"
                    style="@style/Fill.Width"
                    >

                    <TextView
                        android:id="@id/movie_detail_text_title"
                        style="@style/TextMovieDetailTitle"/>

                    <TextView
                        android:id="@id/movie_detail_text_date"
                        style="@style/TextMovieDetailDate"/>

                    <TextView
                        android:id="@id/movie_detail_text_duration"
                        style="@style/TextMovieDetailDuration"/>

                    <TextView
                        android:id="@id/movie_detail_text_genres"
                        style="@style/TextMovieDetailGenres"/>

                </LinearLayout>

            </RelativeLayout>


            <TextView
                android:id="@id/movie_detail_text_tagline"
                style="@style/TextMovieDetailTagline" />

            <TextView
                android:id="@id/movie_detail_text_synopsis"
                style="@style/TextMovieDetailSynopsis" />

            <View
                android:layout_height="1dip"
                android:layout_width="match_parent"
                android:background="@color/primary_light"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_large">

                <TextView
                    android:id="@id/movie_detail_text_rating"
                    style="@style/TextMovieDetailRating" />


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/movie_detail_text_rating"
                    android:layout_toEndOf="@id/movie_detail_text_rating"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_alignParentBottom="true"
                    style="@style/Fill.Width">


                    <RatingBar
                        android:id="@id/movie_detail_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        android:progressBackgroundTint="@color/accent"
                        style="?android:attr/ratingBarStyleSmall" />

                    <TextView
                        android:id="@id/movie_detail_text_votecount"
                        style="@style/TextMovieDetailVoteCount"/>


                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@id/movie_detail_review_container"
                style="@style/MovieDetailReviewContainer"/>

            <View
                android:layout_height="1dip"
                android:layout_width="match_parent"
                android:background="@color/primary_light"
                />

            <LinearLayout
                android:id="@id/movie_detail_trailer_container"
                style="@style/MovieDetailTrailerContainer"/>

        </LinearLayout>



    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@id/movie_detail_favorite_button"
        app:layout_anchor="@id/movie_detail_appbar"
        app:layout_anchorGravity="bottom|right|end"
        app:borderWidth="0dp"
        style="@style/MovieDetailFabButton"/>

</android.support.design.widget.CoordinatorLayout>
<android.support.v7.widget.CardView
    android:id="@id/movie_item_container"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    android:minHeight="278dp"
    android:clickable="true"
    android:foreground="?photoItemForeground"
    style="@style/CardMovieListItem"
    >

    <LinearLayout
        android:orientation="vertical"
        style="@style/Fill.Width">

    <com.example.android.popularmovies.ui.widgets.ImageViewKeepRatio
        android:id="@id/movie_item_image_poster"
        android:contentDescription="@string/movie_list_item_movie_poster"
        app:width_height_ratio="0.667"
        style="@style/ImageMovieListPoster" />

    <LinearLayout
        android:baselineAligned="false"
        android:id="@id/movie_item_footer"
        style="@style/MovieListItemFooter">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@id/movie_item_text_title"
                style="@style/TextMovieListTitle" />

            <TextView
                android:id="@id/movie_item_text_release_date"
                style="@style/TextMovieListReleaseDate" />

        </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_large">

                <ImageView
                    android:id="@id/movie_item_image_favorite_button"
                    android:contentDescription="@null"
                    style="@style/MovieListItemFavoriteButton" />

            </FrameLayout>


    </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>

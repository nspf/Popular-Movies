<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.android.popularmovies"
    style="@style/Match">

    <com.example.android.popularmovies.ui.widgets.EmptyRecyclerView
        android:id="@id/movie_list_recyclerview"
        style="@style/Match"
        />

    <ProgressBar
        android:id="@id/movie_list_progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:visibility="gone">
    </ProgressBar>

    <com.example.android.popularmovies.ui.widgets.EmptyStateView
        android:id="@id/movie_list_empty_view"
        app:messageIcon="@drawable/ic_cloud_outline_off_grey600_48dp"
        app:messageText="@string/error.network"
        style="@style/Match"
        android:visibility="gone"
        />

</RelativeLayout>
